<div class="container">
  <h1> Recent Links</h1>

  <% if @links.present? %>
    <table class="table table-striped table-bordered table-condensed">
      <tr>
        <th>Url</th>
        <th>Share Url</th>
      </th>
      <% @links.each do |link| %>
        <tr>
          <td><%= link_to link.url, link.url %></td>
          <td><%= Settings.base_url + link.code %></td>
        </tr>
      <%  end %>
    </table>
    <%= paginate @links, theme: 'twitter-bootstrap-3'%>
  <% else %>
    <div>
      NO Records Found
    </div>
  <%  end %>
</div>
